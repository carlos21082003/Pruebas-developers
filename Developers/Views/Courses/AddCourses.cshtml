@model Course

<div class="container my-5">
    <h2 class="text-center">Curso Añadido</h2>

    <!-- Mensaje de éxito -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mt-4" role="alert">
            <strong>¡Curso añadido exitosamente!</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Botón para volver a la lista de cursos -->
    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary btn-lg">
            <i class="bi bi-arrow-left"></i> Volver a los cursos
        </a>
    </div>
</div>
